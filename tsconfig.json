{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@content": ["src/content"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
